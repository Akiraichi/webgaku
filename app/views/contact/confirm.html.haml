.page-header
  %h1 問い合わせ確認画面
= form_for @contact, :url => contact_thanks_path do |f|
  %table.table
    %tr
      %th 名前
      %td
        =binding.pry
        = f.hidden_field :name
        = @contact.name
    %tr
      %th メールアドレス
      %td
        = f.hidden_field :email
        = @contact.email
    %tr
      %th 電話番号
      %td
        = f.hidden_field :phone
        = @contact.phone
    %tr
      %th 問い合わせ内容
      %td
        = f.hidden_field :message
        = simple_format(@contact.message)
  = f.submit '送信', :class => 'btn btn-primary'
